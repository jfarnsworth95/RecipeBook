<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecipeBook" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorPrimaryVariant">@color/tertiary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/highlight</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/primary</item>
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/primary</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
        <item name="materialButtonStyle">@style/Theme.RecipeBook.Button</item>
    </style>

    <style name="Widget.App.CheckBox.Imports" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/button_tint_import_files_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.RecipeBook.Chip">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginHorizontal">2.5dp</item>
        <item name="chipBackgroundColor">@color/secondary</item>
        <item name="closeIconTint">@color/white</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.RecipeBook.Button" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

</resources>